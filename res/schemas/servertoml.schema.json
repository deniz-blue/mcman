{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/ParadigmMC/mcman/main/servertoml.schema.json",
    "definitions": {
        "ServerType": {
            "oneOf": [
                {
                    "type": "object",
                    "oneOf": [
                        {
                            "properties": {
                                "type": {
                                    "const": "papermc"
                                },
                                "project": {
                                    "type": "string",
                                    "enum": [
                                        "paper",
                                        "velocity",
                                        "waterfall"
                                    ]
                                },
                                "build": {
                                    "type": "string",
                                    "default": "latest"
                                }
                            }
                        },
                        {
                            "properties": {
                                "type": {
                                    "const": "purpur"
                                },
                                "build": {
                                    "type": "string",
                                    "default": "latest"
                                }
                            }
                        },
                        {
                            "properties": {
                                "type": {
                                    "oneOf": [
                                        {
                                            "const": "quilt"
                                        },
                                        {
                                            "const": "fabric"
                                        }
                                    ]
                                },
                                "loader": {
                                    "description": "The loader version",
                                    "type": "string",
                                    "default": "latest"
                                },
                                "installer": {
                                    "description": "The installer version",
                                    "type": "string",
                                    "default": "latest"
                                }
                            },
                            "required": ["loader"]
                        },
                        {
                            "properties": {
                                "type": {
                                    "oneOf": [
                                        {
                                            "const": "neoforge"
                                        },
                                        {
                                            "const": "forge"
                                        }
                                    ]
                                },
                                "loader": {
                                    "description": "The loader version",
                                    "type": "string",
                                    "default": "latest"
                                }
                            },
                            "required": ["loader"]
                        },
                        {
                            "properties": {
                                "type": {
                                    "const": "buildtools"
                                },
                                "software": {
                                    "enum": [
                                        "spigot",
                                        "craftbukkit",
                                        "none"
                                    ],
                                    "default": "spigot"
                                },
                                "args": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                }
                            }
                        },
                        {
                            "properties": {
                                "type": {
                                    "oneOf": [
                                        {
                                            "const": "paper"
                                        },
                                        {
                                            "const": "velocity"
                                        },
                                        {
                                            "const": "waterfall"
                                        },
                                        {
                                            "const": "bungeecord"
                                        },
                                        {
                                            "const": "vanilla"
                                        }
                                    ]
                                }
                            }
                        }
                    ]
                },
                {
                    "$ref": "#/definitions/Downloadable"
                }
            ]
        },
        "Downloadable": {
            "type": "object",
            "oneOf": [
                {
                    "properties": {
                        "type": {
                            "const": "url"
                        },
                        "url": {
                            "type": "string"
                        },
                        "filename": {
                            "type": "string"
                        },
                        "desc": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "type",
                        "url"
                    ]
                },
                {
                    "properties": {
                        "type": {
                            "oneOf": [
                                {
                                    "const": "modrinth"
                                },
                                {
                                    "const": "mr"
                                }
                            ]
                        },
                        "id": {
                            "type": "string"
                        },
                        "version": {
                            "type": "string",
                            "default": "latest"
                        }
                    },
                    "required": ["id"]
                },
                {
                    "properties": {
                        "type": {
                            "oneOf": [
                                {
                                    "const": "curserinth"
                                },
                                {
                                    "const": "cr"
                                }
                            ]
                        },
                        "id": {
                            "type": "string"
                        },
                        "version": {
                            "type": "string"
                        }
                    },
                    "required": ["id"]
                },
                {
                    "description": "Download from Spigot Resources",
                    "properties": {
                        "type": {
                            "const": "spigot"
                        },
                        "id": {
                            "type": "string"
                        },
                        "version": { "type": "string", "default": "latest" }
                    },
                    "required": ["id"]
                },
                {
                    "description": "Download from Github Releases",
                    "properties": {
                        "type": {
                            "const": "ghrel"
                        },
                        "repo": {
                            "type": "string"
                        },
                        "tag": {
                            "type": "string",
                            "default": "latest"
                        },
                        "asset": {
                            "type": "string",
                            "default": "first"
                        }
                    },
                    "required": ["repo"]
                },
                {
                    "description": "Download from jenkins",
                    "properties": {
                        "type": {
                            "const": "jenkins"
                        },
                        "url": {
                            "type": "string"
                        },
                        "job": {
                            "type": "string"
                        },
                        "build": {
                            "type": "string",
                            "default": "latest"
                        },
                        "artifact": {
                            "type": "string",
                            "default": "first"
                        }
                    }
                },
                {
                    "description": "Download from a Maven repository",
                    "properties": {
                        "type": {
                            "const": "maven"
                        },
                        "url": {
                            "type": "string"
                        },
                        "group": {
                            "type": "string"
                        },
                        "artifact": {
                            "type": "string"
                        },
                        "version": {
                            "type": "string",
                            "default": "latest"
                        },
                        "filename": {
                            "type": "string",
                            "default": "artifact"
                        }
                    },
                    "required": ["url", "group", "artifact"]
                }
            ]
        }
    },
    "title": "server.toml",
    "description": "The mcman server.toml configuration file",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description": "Name of the server. Exported as `SERVER_NAME` in bootstrapping"
        },
        "mc_version": {
            "type": "string",
            "description": "Minecraft version of the server. Used for a lot of Downloadables. Exported as `SERVER_VERSION` in bootstrapping"
        },
        "jar": {
            "description": "The server jar to use",
            "$ref": "#/definitions/ServerType"
        },
        "launcher": {
            "type": "object",
            "description": "Config properties for generating launch scripts",
            "properties": {
                "preset_flags": {
                    "description": "Preset flags for launch scripts",
                    "enum": [
                        "aikars",
                        "proxy",
                        "none"
                    ],
                    "default": "none"
                },
                "nogui": {
                    "type": "boolean",
                    "description": "Adds --nogui to launch scripts"
                },
                "disable": {
                    "type": "boolean",
                    "description": "If enabled, mcman will not generate launch scripts."
                },
                "jvm_args": {
                    "type": "string",
                    "description": "Custom JVM args (before `-jar server.jar`) to append to the launch scripts"
                },
                "game_args": {
                    "type": "string",
                    "description": "Custom game args (after `-jar server.jar`) to append to the launch scripts"
                },
                "eula_args": {
                    "type": "boolean",
                    "description": "Agree to EULA using the game flag `-Dcom.mojang.eula.agree=true`"
                },
                "memory": {
                    "type": "string",
                    "description": "The memory amount to give to the server"
                },
                "properties": {
                    "type": "object",
                    "description": "The -Dsomething=something properties to add to the launcher scripts"
                },
                "java_version": {
                    "type": "string",
                    "description": "Java version hint",
                    "examples": ["17", "16", "8"]
                }
            }
        },
        "plugins": {
            "description": "A list of plugins",
            "type": "array",
            "items": {
                "$ref": "#/definitions/Downloadable"
            }
        },
        "mods": {
            "description": "A list of mods",
            "type": "array",
            "items": {
                "$ref": "#/definitions/Downloadable"
            }
        },
        "clientsidemods": {
            "description": "A list of client-side mods used in exporting modpacks",
            "type": "array",
            "items": {
                "type": "array",
                "items": {
                    "allOf": [
                        {
                            "$ref": "#/definitions/Downloadable"
                        }
                    ],
                    "properties": {
                        "optional": {
                            "type": "boolean",
                            "description": "Marks if optional or not"
                        },
                        "desc": {
                            "type": "string",
                            "description": "Provide a description"
                        }
                    }
                }
            }
        },
        "worlds": {
            "type": "object",
            "description": "Worlds, indexed by their names",
            "additionalProperties": {
                "type": "object",
                "description": "A world",
                "properties": {
                    "download": {
                        "description": "Where to download the world, if missing",
                        "$ref": "#/definitions/Downloadable"
                    },
                    "datapacks": {
                        "type": "array",
                        "items": {
                            "description": "A list of datapacks to download for this world",
                            "$ref": "#/definitions/Downloadable"
                        }
                    }
                }
            }
        },
        "variables": {
            "type": "object",
            "description": "Variables to use in bootstrapping",
            "properties": {
                "MODPACK_NAME": { "type": "string" },
                "MODPACK_DESCRIPTION": { "type": "string" },
                "MODPACK_VERSION": { "type": "string" },
                "MODPACK_SUMMARY": { "type": "string" },
                "MODPACK_AUTHOR": { "type": "string" },
                "MOTD": { "type": "string" }
            }
        },
        "markdown": {
            "type": "object",
            "description": "Markdown rendering features",
            "properties": {
                "files": {
                    "type": "array",
                    "description": "List of markdown files to check and edit",
                    "items": {
                        "type": "string",
                        "description": "Path to a markdown file"
                    },
                    "default": [
                        "README.md"
                    ]
                },
                "auto_update": {
                    "type": "boolean",
                    "description": "If enabled, will automatically render on some events",
                    "default": false
                }
            }
        },
        "options": {
            "description": "Extra optional options",
            "type": "object",
            "properties": {
                "upload_to_mclogs": {
                    "description": "If enabled, uploads logs to https://mclo.gs if server stops/crashes when using `run`/`dev` commands",
                    "type": "boolean"
                },
                "bootstrap_exts": {
                    "description": "Extra file extensions to boostrap",
                    "type": "array",
                    "items": { "type": "string" }
                }
            }
        }
    }
}
